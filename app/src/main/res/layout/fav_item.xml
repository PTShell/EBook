<?xml version="1.0" encoding="UTF-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/list_item_layout"
    android:layout_width="fill_parent"
    android:layout_height="50.0dip"
    android:background="@drawable/category_selector"
    android:gravity="center_vertical"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/director_icon2"
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:paddingLeft="5.0dip"
        android:scaleType="centerInside"
        android:src="@drawable/director_icon2" />

    <TextView
        android:id="@+id/textcalalog"
        android:layout_width="0.0dip"
        android:layout_height="wrap_content"
        android:layout_weight="1.0"
        android:ellipsize="marquee"
        android:gravity="left"
        android:paddingLeft="25.0dip"
        android:textAppearance="?android:textAppearanceMedium"
        android:textColor="@color/white"
        android:textColorHint="@color/transparent" />

    <!-- android:gravity="center" 是字体居正 -->

    <ImageView
        android:id="@+id/director_icon"
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:layout_gravity="right"
        android:paddingRight="15.0dip"
        android:scaleType="centerInside"
        android:src="@drawable/director_icon" />
</LinearLayout>  